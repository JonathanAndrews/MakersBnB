<% include partials/header %>

<h1 id="greeting">Hello <%= user %></h1>
<form action="/listings/new">
  <button type="submit" name="add_space">Add New Space</button>
</form>
<form action="/listing/requests" method="get">
  <button type="submit">Check Booking Requests</button>
</form>
<ul>
  <% let num = 1 %>
  <% listings.forEach(function(listing) { %>
    <li class="listing-<%= num %>">
      <span class="listing-<%= num %>-name"><%= listing.name %></span> - <%= listing.description %> - <a href="/listing/<%=listing.id%>" class="listing-<%= num %>-link">Book Now</a>
    </li>
    <% num++ %>
  <% }) %>
</ul>

<% include partials/footer %>
